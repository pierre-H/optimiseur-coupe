using namespace std;

int saisie ()
{
	float troncon = 10., barre = 10.0;
	List * barres = new List ();
	List * troncons = new List ();
	cout << "Veuillez rentrer les longueurs de barres dont vous disposez les unes après les autres. Quand vous aurez terminé, tapez le chiffre \"0\""<< endl;
	while (barre != 0.)
	{
		cin >> barre;
		barres->trie (barre);
		cout << "Vous disposez d'une barre de " << barre << ". Soit, continuons." << endl;
	}
	cout << "Ah, c'est tout ce que vous avez ?" << endl;
	cout << "Veuillez rentrer les troncons désirés les uns après les autres. Quand vous aurez terminé, tapez le chiffre \"0\""<< endl;
	while (troncon != 0.)
	{
		cin >> troncon;
		troncons->trie (troncon);
		cout << "Vous désirez couper un tronçon de " << troncon << ". Soit, continuons." << endl;
	}
	cout << "Ah, c'est tout ? Et bien allons-y !" << endl;
	cout << "Voici les barres que vous possédez : ";
	barres->affiche ();
	cout << "Et voici les troncons que vous avez demandés : ";
	troncons->affiche();
	List * l = new List();
	DoubleListPaires * d = new DoubleListPaires(l,barres);
    d->pilote ();
    return 0;
}
	
